<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Gigs</div>

  <!-- Table -->
  <table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Band</th>
            <th>Venue</th>
            <th>Supports</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
    <% gigs.map(function(gig, index) { %>
        <tr>
            <td><%= (page.skip + index + 1) %></td>
            <td><a href="/band/<%= gig.band %>"><%= gig.band %></a></td>
            <td><a href="/venue/<%= gig.venue %>"><%= gig.venue %></a></td>
            <td><%= gig.supports %></td>
            <td><%= gig.date ? moment(gig.date).calendar() : '' %></td>
            <td>
              <a class="btn btn-primary" href="/edit/<%= gig._id %>">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </a>
              <a class="delete-gig btn btn-danger" href="/delete/<%= gig._id %>">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </a>
            </td>
        </tr>
    <% }); %>
    </tbody>
  </table>
</div>

<nav>
  <ul class="pager">
    <li class="<%= page.prev ? '' : 'disabled' %>"><a href="<%= page.prev ? '/'+page.prev : '' %>">Previous</a></li>
    <li class="<%= page.next ? '' : 'disabled' %>"><a href="<%= page.next ? page.next : '' %>">Next</a></li>
  </ul>
</nav>
