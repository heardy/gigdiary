<div class="form-group">
  <label for="band">Band</label>
  <input type="text" class="form-control band" id="band" name="band" placeholder="Band" value="<%= gig.band %>">
</div>
<div class="form-group">
  <label for="venue">Venue</label>
  <input type="text" class="form-control venue" id="venue" name="venue" placeholder="Venue" value="<%= gig.venue %>">
</div>
<div class="form-group">
  <label for="date">Date</label>
  <input type="date" class="form-control date" id="date" name="date" placeholder="Date" value="<%= gig.date ? moment(gig.date).format('YYYY-MM-DD') : '' %>">
</div>
